{
  "name": "tsl",
  "displayName": "The Spawn Language (TSL)",
  "description": "Syntax highlighting and snippets for iGoodie's TSL",
  "version": "0.3.0-alpha",
  "publisher": "iGoodie",
  "author": {
    "name": "iGoodie",
    "email": "igoodie@programmer.net"
  },
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.62.0"
  },
  "main": "./build/vsc/extension.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/TheSpawnProject/TheSpawnLanguage-LSP.git"
  },
  "bugs": {
    "url": "https://github.com/TheSpawnProject/TheSpawnLanguage-LSP/issues",
    "email": "igoodie@programmer.net"
  },
  "categories": [
    "Programming Languages",
    "Snippets"
  ],
  "contributes": {
    "commands": [
      {
        "command": "extension.tsl",
        "title": "The Spawn Language Server"
      }
    ],
    "languages": [
      {
        "id": "tsl",
        "aliases": [
          "The Spawn Language",
          "tsl"
        ],
        "extensions": [
          ".tsl"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "configurationDefaults": {
      "[tsl]": {
        "editor.semanticHighlighting.enabled": true
      }
    },
    "grammars": [
      {
        "language": "tsl",
        "scopeName": "source.tsl",
        "path": "./syntaxes/tsl.tmLanguage.json",
        "embeddedLanguages": {
          "source.js": "javascript"
        }
      }
    ],
    "snippets": [
      {
        "language": "tsl",
        "path": "./snippets/snippets.json"
      }
    ]
  },
  "activationEvents": [
    "onLanguage:tsl",
    "onCommand:extension.tsl"
  ],
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "dependencies": {
    "vscode-languageclient": "7.0.0"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^5.2.6",
    "@types/node": "^10.12.21",
    "@types/vscode": "^1.38.0",
    "glob": "^7.1.4",
    "mocha": "^6.1.4",
    "tslint": "^5.12.1",
    "typescript": "^3.3.1",
    "vscode-test": "^1.2.0"
  }
}
